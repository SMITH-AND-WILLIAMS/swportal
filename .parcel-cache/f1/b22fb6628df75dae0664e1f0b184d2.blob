body {
  overflow-x: hidden;
}
header{
    perspective:1200px; 
    height:100vh;
    position:relative;
    background: url(c2cc673ffa2c74d9c628d47d5ccbaddd) center center no-repeat;
    background-size: cover;
}
header:after{
  content:'';
  display:block;
  width:100%;
  height:18vh;
  position:absolute;
  bottom:0;
  left:0;
  background:linear-gradient(#242021,#ff2021);
}
.sea{
  content: "";
  display: block;
  position: absolute;
  background-color:transparent;
  background: url(590f39873719b8d5ab1f9fddbfb13727) center center no-repeat;
  background-size:cover;
  top: 0;
  left: 0;
  right:0;
  bottom:0;
  filter: url("#turbulence");   

}
